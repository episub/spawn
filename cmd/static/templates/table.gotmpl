// BatchInsert Creates provided entries in one attempt
func BatchInsert(
	ctx context.Context,
	db gnorm.DB,
	rows []Row,
	options InsertOptions,
) error {
	span, _ := opentracing.StartSpanFromContext(ctx, "BatchInsert_{{.Table.Name}}")
	defer span.Finish()

	var rowCount = {{len .Table.Columns}}
	if len(options.IncludeFields) > 0 {
		rowCount = len(options.IncludeFields)
