		// when adding arguments.  If any fields don't exist, our count at the end
		// of looping will not match.
		sort.Strings(options.IncludeFields)
	}

	// No rows, so do nothing
	if len(rows) == 0 {
		return nil
	}

	args := make([]interface{}, rowCount * len(rows))
	inserts := make([]string, len(rows))

	var err error
	for i, o := range rows {
		if err = prepareCreate(ctx, &o); err != nil {
			return err
		}

		argNumbers := make([]string, rowCount)

		globalIndex := i * rowCount
		index := 0


		{{- range .Table.Columns.DBNames.Sorted}}{{with index $colsByName .}}
		if len(options.IncludeFields) == 0 || "{{.DBName}}" == options.IncludeFields[index] {
			args[globalIndex] = o.{{ .Name }}
			argNumbers[index] = fmt.Sprintf("%d", globalIndex+1)
			globalIndex++
			index++
		}
		{{end}}
		{{end}}

		if len(options.IncludeFields) != 0 && len(options.IncludeFields) != index {
			// If any field did not exist, it should be the most recent one in the list
			return fmt.Errorf("Unknown field %s", options.IncludeFields[index])
		}

		// Add the value
		inserts[i] = fmt.Sprintf("($%s)", strings.Join(argNumbers, ", $"))
	}

	// sql query
	insertFields := "{{ join .Table.Columns.DBNames.Sorted ", " }}"
	if len(options.IncludeFields) > 0 {
		insertFields = strings.Join(options.IncludeFields, ", ")
	}
	var sqlstr = `INSERT INTO {{$schema}}.{{$table}} (` +
		insertFields +
		`) VALUES ` + strings.Join(inserts, ", ")

	// run query
	_, err = db.Exec(sqlstr, args...)
	if err != nil {
		return err
	}

